@model EmployeeManagement.Models.Employee

<h2>Are you sure you want to delete this employee?</h2>

<div>
    <h3>@Model.FirstName @Model.LastName</h3>
    <p>Position: @Model.Position</p>
    <p>Salary: @Model.Salary</p>

    <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this employee?');">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
    </form>

</div>

