@model IEnumerable<EmployeeManagement.Models.Admin>

<h2>Admin List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.AdminId</td>
                <td>@admin.Username</td>
                <td>@admin.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@admin.AdminId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@admin.AdminId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Admin</a>

